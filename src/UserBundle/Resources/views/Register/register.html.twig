{% extends '::base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('bundles/user/css/login.css') }}">
{% endblock %}

{% block body %}
    <section class="login">
        <article>
            <h1>Register</h1>
            <form action="{{ path('user_register') }}" method="post">
                {{ form_errors(register_form) }}
                <div class="awesome-username-wrapper">
                    {{ form_errors(register_form.username) }}
                    {{ form_label(register_form.username) }}
                    {{ form_widget(register_form.username) }}
                </div>
                {{ form_row(register_form.email) }}
                {{ form_row(register_form.plainPassword.first, {
                    label: 'Password'
                }) }}
                {{ form_row(register_form.plainPassword.second, {
                    label: 'Confirm Password'
                }) }}

                {{ form_rest(register_form) }}
                <input type="submit" value="Register"
                       class="btn btn-primary pull-right">
            </form>
        </article>
    </section>
{% endblock %}